<body>
  <h1 >Chat Online</h1>
  <div class="container">
    <form action="/chat" method="get" class="form">
      <label>Selecione a sala:</label>
      <hr class="hr" />
      <select name="select_room" class="form-control">
        <option>node</option>
        <option>javascript</option>
      </select>
      <hr class="hr" />
      <label>Username</label>
      <input type="text" name="username" class="form-control" placeholder="Digite seu username"/>
      <hr class="hr" />
    <button type="submit" class="btn btn-primary">Entrar</button>
  </form>
  </div>
